{
  "categories": [
    {
      "title": "## 🚀 Features",
      "labels": ["feature", "enhancement", "feat"]
    },
    {
      "title": "## 🐛 Bug Fixes",
      "labels": ["fix", "bug", "bugfix"]
    },
    {
      "title": "## 📦 Dependencies",
      "labels": ["dependencies", "deps", "dependency"]
    },
    {
      "title": "## 📝 Documentation",
      "labels": ["documentation", "docs"]
    },
    {
      "title": "## ⚡️ Performance",
      "labels": ["performance", "perf"]
    },
    {
      "title": "## 🔄 Refactoring",
      "labels": ["refactor", "refactoring"]
    },
    {
      "title": "## 🧪 Tests",
      "labels": ["test", "tests"]
    },
    {
      "title": "## 🔧 CI/CD",
      "labels": ["ci", "cd", "ci/cd", "build"]
    },
    {
      "title": "## 🔄 Other Changes",
      "labels": []
    }
  ],
  "ignore_labels": [
    "skip-changelog", "no-changelog"
  ],
  "sort": {
    "order": "ASC",
    "on_property": "merge_date"
  },
  "template": "${{CHANGELOG}}\n\n<details>\n<summary>Uncategorized</summary>\n\n${{UNCATEGORIZED}}\n</details>",
  "empty_template": "No changes in this release",
  "pr_template": "- ${{TITLE}} (#${{NUMBER}})",
  "trim_values": true,
  "max_pull_requests": 1000,
  "max_back_track_time_days": 1000
} 