{
  "categories": [
    {
      "title": "## 🚀 Features",
      "labels": ["feature", "enhancement", "feat"]
    },
    {
      "title": "## 🐛 Bug Fixes",
      "labels": ["fix", "bug", "bugfix"]
    },
    {
      "title": "## 🧪 Tests",
      "labels": ["test", "testing"]
    },
    {
      "title": "## 📚 Documentation",
      "labels": ["documentation", "docs"]
    },
    {
      "title": "## 🧰 Maintenance",
      "labels": ["chore", "dependencies", "deps"]
    },
    {
      "title": "## ⚡ Performance",
      "labels": ["performance", "perf"]
    }
  ],
  "ignore_labels": ["ignore", "wip", "duplicate"],
  "sort": {
    "order": "ASC",
    "on_property": "mergedAt"
  },
  "template": "#{{CHANGELOG}}\n\n<details>\n<summary>🔗 Full Changelog</summary>\n\n#{{UNCATEGORIZED}}\n</details>",
  "pr_template": "- #{{TITLE}} ([#{{NUMBER}}](#{{URL}})) by @#{{AUTHOR}}",
  "empty_template": "- No changes in this release",
  "transformers": [
    {
      "pattern": "\\[skip ci\\]",
      "target": ""
    }
  ]
} 